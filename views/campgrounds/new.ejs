<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Add New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="post"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title"
          >Enter the name of new campground:</label
        >
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="invalid-feedback">Campground name is required!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description"
          >Enter a description for new campground:</label
        >
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">
          Description for new campground name is required!
        </div>
      </div>

      <div class="mb-3">
        <label class="mb-1" for="price"
          >Enter the price of new campground:</label
        >
        <div class="input-group">
          <span class="input-group-text" id="price">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="basic-addon1"
            id="price"
            name="campground[price]"
            required
          />
          <div class="invalid-feedback">Campground price is required!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location"
          >Enter the location of new campground:</label
        >
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="invalid-feedback">Campground location is required!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="fileInput"
          >Upload image(s) of new campground:</label
        >
        <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            id="fileInput"
            name="campground[images]"
            multiple
          />
          <label class="input-group-text" for="fileInput">Upload</label>
        </div>
        <div class="invalid-feedback">Campground image is required!</div>
      </div>
      <button class="btn btn-success mb-2">Save</button>
    </form>
  </div>
</div>
